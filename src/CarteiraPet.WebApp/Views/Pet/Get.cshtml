@model CarteiraPet.Domain.Models.PetModel

<div class="d-flex flex-wrap justify-content-center">
    <div class="card" style="width: 33rem; margin: 5px; align-items: center;">
        <img style="width: 250px; height: 250px" src="@Model.Photo" class="card-img-top" alt="...">
        <div class="card-body" style="width: 100%; padding: 10px 140px" >
            <div>
                <h5 class="card-title p-2">@Model.Name</h5>
                 <p class="card-text p-2">@Model.Age</p>
            </div>
            <div class="d-flex">
                
                <p class="card-text p-2">@Model.Sex</p>
                 <button class="ml-auto p-2 btn btn-primary">Editar</button>
            </div>
        </div>
    </div>
</div>